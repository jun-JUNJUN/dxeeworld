# MongoDB configuration
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=dxeeworld

# Server configuration
PORT=8202
DEBUG=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET=your-jwt-secret-here-change-in-production

# Session configuration
SESSION_LIFETIME_DAYS=7

# OAuth Authentication Configuration
# Google OAuth 2.0 設定 - https://console.developers.google.com/
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:8202/auth/google/callback

# Facebook OAuth 設定 - https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_OAUTH_REDIRECT_URI=http://localhost:8202/auth/facebook/callback

# SMTP Email Configuration
# メール認証・通知機能で使用
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDRESS=noreply@dxeeworld.com

# Email Authentication Settings
# メールアドレス認証機能の設定
EMAIL_VERIFICATION_ENABLED=True
EMAIL_VERIFICATION_EXPIRY_HOURS=24

# OAuth Feature Flags
# OAuth機能の有効/無効切り替え
GOOGLE_OAUTH_ENABLED=False
FACEBOOK_OAUTH_ENABLED=False
EMAIL_AUTH_ENABLED=True